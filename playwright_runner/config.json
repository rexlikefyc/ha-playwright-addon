{
  "name": "Playwright Runner",
  "version": "1.0.0",
  "slug": "playwright_runner",
  "description": "A Home Assistant add-on to run Playwright scripts.",
  "arch": ["amd64", "armhf", "armv7", "aarch64"],
  "startup": "once",
  "boot": "manual",
  "host_network": true,
  "options": {
    "script": "twex_stock_filter.py"
  },
  "schema": {
    "script": {
      "type": "select",
      "options": [
        "twex_stock_filter.py",
        "twse_stock_filter.py"
      ],
      "default": "twex_stock_filter.py"
    }
  }
}
